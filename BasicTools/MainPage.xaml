<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasicTool.MainPage"
             xmlns:local="clr-namespace:BasicTool"
             Title="Installed Apps">

    <ContentPage.BindingContext>
        <local:ViewModel x:Name="viewModel" />
    </ContentPage.BindingContext>
    <Grid RowDefinitions="50,50" ColumnDefinitions="*,*" >
        <Button Text="AppCleaner" Clicked="Button_Clicked" Grid.ColumnSpan="2"/>
        <Entry x:Name="helper" Text="" Placeholder="SampleBrowser.maui" Grid.Column="0" Grid.Row="1"/>
        <Button Text="BuildTestHelper" Clicked="DeleteSyncfusionFolders" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</ContentPage>
